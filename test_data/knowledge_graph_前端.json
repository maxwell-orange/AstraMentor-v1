{
  "nodes": [
    {
      "id": "n1",
      "name": "HTML 核心基础",
      "description": "学习网页语义化结构、DOM树概念以及常用的HTML5标签。",
      "level": 0,
      "difficulty": "初级",
      "prerequisites": []
    },
    {
      "id": "n2",
      "name": "CSS 样式与布局",
      "description": "掌握盒模型、定位、浮动以及Flexbox和Grid等现代布局方案。",
      "level": 0,
      "difficulty": "初级",
      "prerequisites": [
        "n1"
      ]
    },
    {
      "id": "n3",
      "name": "JavaScript 编程语言基础",
      "description": "学习变量、数据类型、流程控制、函数及基本算法逻辑。",
      "level": 0,
      "difficulty": "初级",
      "prerequisites": []
    },
    {
      "id": "n4",
      "name": "DOM 交互与 Web API",
      "description": "学习如何使用 JS 操作 DOM 元素、处理事件监听及使用 Fetch 进行网络请求。",
      "level": 1,
      "difficulty": "中级",
      "prerequisites": [
        "n1",
        "n3"
      ]
    },
    {
      "id": "n5",
      "name": "ES6+ 现代 JavaScript 特性",
      "description": "掌握解构赋值、箭头函数、Promise、Async/Await 及模块化 (ES Modules)。",
      "level": 1,
      "difficulty": "中级",
      "prerequisites": [
        "n3"
      ]
    },
    {
      "id": "n6",
      "name": "前端工程化与工具链",
      "description": "学习 npm/yarn 包管理、Webpack/Vite 构建工具及 Babel 转译配置。",
      "level": 1,
      "difficulty": "中级",
      "prerequisites": [
        "n5"
      ]
    },
    {
      "id": "n7",
      "name": "现代前端框架 (React/Vue/Angular)",
      "description": "深入理解组件化开发、虚拟 DOM、响应式原理及声明式编程。",
      "level": 2,
      "difficulty": "高级",
      "prerequisites": [
        "n4",
        "n5",
        "n6"
      ]
    },
    {
      "id": "n8",
      "name": "状态管理模式",
      "description": "学习 Redux、Pinia 或 Vuex 等复杂应用中的数据流管理与持久化。",
      "level": 2,
      "difficulty": "高级",
      "prerequisites": [
        "n7"
      ]
    },
    {
      "id": "n9",
      "name": "浏览器原理与性能优化",
      "description": "理解渲染管线、重绘重排、缓存策略及代码分割等优化手段。",
      "level": 2,
      "difficulty": "高级",
      "prerequisites": [
        "n4",
        "n6"
      ]
    },
    {
      "id": "n10",
      "name": "Web 安全防护",
      "description": "掌握 XSS、CSRF、CORS 等常见 Web 安全漏洞的成因与防御方案。",
      "level": 2,
      "difficulty": "高级",
      "prerequisites": [
        "n4"
      ]
    },
    {
      "id": "n11",
      "name": "服务端渲染 (SSR) 与静态生成 (SSG)",
      "description": "学习 Next.js 或 Nuxt.js，解决 SEO 问题并提升首屏加载速度。",
      "level": 3,
      "difficulty": "专家",
      "prerequisites": [
        "n7"
      ]
    },
    {
      "id": "n12",
      "name": "微前端与大型架构设计",
      "description": "探索微前端架构 (qiankun/wujie) 及大型项目的模块化解耦与维护。",
      "level": 3,
      "difficulty": "专家",
      "prerequisites": [
        "n7",
        "n8",
        "n9"
      ]
    }
  ],
